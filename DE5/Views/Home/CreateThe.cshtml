
@{
    ViewBag.Title = "CreateThe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Thêm mới thẻ</h2>

<div class="w3agile-validation w3ls-validation">
    <div class="panel panel-widget agile-validation">
        <div class="validation-grids widget-shadow" data-example-id="basic-forms">
            <div class="input-info">
                <h3>Thông tin tin tức :</h3>
            </div>
            <div class="form-body form-body-info">
                <form data-toggle="validator" novalidate="true" action="#" method="post">
                    <div class="form-group ">
                        <input type="text" class="form-control" id="LoaiThe" placeholder="Loại thẻ" max="255" name="LoaiThe" required="">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="TenThe" max="255" placeholder="Tên thẻ" name="TenThe" required="">

                    </div>
                    <div class="form-group">

                        <input type="number" min="0" class="form-control" id="CanDuoi" max="255" placeholder="Cận dưới" name="CanDuoi" required="">
                    </div>
                  
                    <div class="form-group">
                        <input type="number" min="1" class="form-control" id="CanTren" max="255" placeholder="Cận trên" name="CanTren" required="">
                    </div>

                    <br />
                    <div class="bottom">

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary ">Thêm</button>
                        </div>
                        <div class="clearfix"> </div>
                    </div>

                </form>
            </div>
        </div>
    </div>



</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>





